

<!-- =========================
    NAVIGATION SECTION   
============================== -->
<div class="navbar navbar-default navbar-fixed-top sticky-navigation" role="navigation">
     <div class="container">

          <div class="navbar-header">
               <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
               </button>
               {{page.logo}}
          </div>
          <div class="collapse navbar-collapse">
                    {{page.primary_menu}}
          </div>

     </div>
</div>

     <div class="highlighted">
        {{page.highlighted}}
     </div>

{% if page.title %}

<!-- =========================
    BLOG HEADER SECTION   
============================== -->
<section id="blog-header" class="parallax-section">
     <div class="container">
          <div class="row">
               <div class="col-md-offset-2 col-md-8 col-sm-12">
                    <h3 class="wow bounceIn" data-wow-delay="0.9s">
                      {{site_name}}
                    </h3>
                    <h1 class="wow fadeInUp home_float_image animate floatingTop" data-wow-delay="1.6s">
                         {{ page['#title'] }}
                    </h1>
               </div>
          </div>
     </div>
</section>

{% endif %}
    
{{page.content}}


<!-- =========================
    FOOTER SECTION   
============================== -->
<footer>
     <div class="container">
          <div class="row">

               <div class="wow fadeInUp col-md-4 col-sm-4" data-wow-delay="0.6s">
                    {{page.footer_first}}
               </div>

               <div class="wow fadeInUp col-md-5 col-sm-4"  data-wow-delay="0.9s">
                    {{page.footer_second}}
               </div>

               <div class="wow fadeInUp col-md-3 col-sm-4" data-wow-delay="1s">
                    {{page.footer_third}}
               </div>

               <div class="clearfix"></div>

               <div class="col-md-12 col-sm-12">
                    <p class="copyright-text">{{copyright}}</p>
                    <p class="copyright-text">Drupal Theme developed by <a href="https://drupalslave.com" target="_blank">Drupal Slave</a> </p>
               </div>
               
          </div>
     </div>
</footer>